<mateconfschemafile>
    <schemalist>
      <schema>
        <key>/schemas/desktop/mate/background/draw_background</key>
        <applyto>/desktop/mate/background/draw_background</applyto>
        <owner>mate</owner>
        <type>bool</type>
        <default>true</default>
        <locale name="C">
        <short>Draw Desktop Background</short>
        <long>Have MATE draw the desktop background.</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/picture_options</key>
        <applyto>/desktop/mate/background/picture_options</applyto>
        <owner>mate</owner>
        <type>string</type>
        <default>zoom</default>
        <locale name="C">
        <short>Picture Options</short>
        <long>Determines how the image set by wallpaper_filename is
    rendered.  Possible values are "none", "wallpaper", "centered", "scaled",
    "stretched", "zoom", "spanned".</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/picture_filename</key>
        <applyto>/desktop/mate/background/picture_filename</applyto>
        <owner>mate</owner>
        <type>string</type>
	<default>@datadir@/pixmaps/backgrounds/mate/background-default.jpg</default>
        <locale name="C">
        <short>Picture Filename</short>
        <long>File to use for the background image.</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/picture_opacity</key>
        <applyto>/desktop/mate/background/picture_opacity</applyto>
        <owner>mate</owner>
        <type>int</type>
	<default>100</default>
        <locale name="C">
        <short>Picture Opacity</short>
        <long>Opacity with which to draw the background picture.</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/primary_color</key>
        <applyto>/desktop/mate/background/primary_color</applyto>
        <owner>mate</owner>
        <type>string</type>
        <default>#66ba00</default>
        <locale name="C">
        <short>Primary Color</short>
        <long>Left or Top color when drawing gradients, or the solid color.</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/secondary_color</key>
        <applyto>/desktop/mate/background/secondary_color</applyto>
        <owner>mate</owner>
        <type>string</type>
        <default>#66ba00</default>
        <locale name="C">
        <short>Secondary Color</short>
        <long>Right or Bottom color when drawing gradients, not used for solid color.</long>
        </locale>
      </schema>
      <schema>
        <key>/schemas/desktop/mate/background/color_shading_type</key>
        <applyto>/desktop/mate/background/color_shading_type</applyto>
        <owner>mate</owner>
        <type>string</type>
        <default>solid</default>
        <locale name="C">
        <short>Color Shading Type</short>
        <long>How to shade the background color. Possible values are "horizontal-gradient", "vertical-gradient", and "solid".</long>
        </locale>
      </schema>
    </schemalist>
</mateconfschemafile>
