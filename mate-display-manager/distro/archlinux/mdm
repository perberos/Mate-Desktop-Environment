#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

case "$1" in
  start)
    stat_busy "Starting MDM"
    /usr/sbin/mdm &
    if [ $? -gt 0 ]; then
      stat_fail
    else

      add_daemon mdm
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping MDM"
    [ -f /var/run/mdm.pid ] && kill `cat /var/run/mdm.pid` &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon mdm
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 2
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
exit 0
