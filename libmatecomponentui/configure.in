dnl
MATECOMPONENTUI_MODULES="libmatecanvas-2.0 >= 1.116.0 \
		  libmatecomponent-2.0 >= 2.13.0 \
		  libmate-2.0 >= 2.13.7 \
		  matecomponent-activation-2.0 >= 2.13.0 \
		  libxml-2.0 >= 2.4.20 \
		  mateconf-2.0 >= 1.1.9 \
		  gtk+-2.0 >= 2.6.0 \
		  gobject-2.0 >= 2.6.0"
