"  --type string \\\n"
"  --set /system/http_proxy/host wwwproxy.xyz.com"
msgstr ""
"mateconftool-2 --direct \\\n"
"  --config-source xml:readwrite:/etc/mateconf/mateconf.xml.mandatory \\\n"
"  --type string \\\n"
