"    &lt;/Include&gt;\n"
"    &lt;Exclude&gt;\n"
"      &lt;Filename&gt;dasher.desktop&lt;/Filename&gt;\n"
"    &lt;/Exclude&gt;\n"
"  &lt;/Menu&gt;\n"
"\n"
"&lt;!-- ... --&gt;\n"
msgstr ""
"&lt;!-- ... --&gt;\n"
"\n"
"  &lt;Menu&gt;\n"
"    &lt;Name&gt;Accessibility&lt;/Name&gt;\n"
"    &lt;Directory&gt;Accessibility.directory&lt;/Directory&gt;\n"
"    &lt;Include&gt;\n"
